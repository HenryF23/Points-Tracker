<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <ImageView
            android:id="@+id/main_list_imageView"
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.501"
            tools:srcCompat="@tools:sample/avatars" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            app:layout_constraintBottom_toBottomOf="@+id/main_list_imageView"
            app:layout_constraintStart_toEndOf="@+id/main_list_imageView"
            app:layout_constraintTop_toTopOf="@+id/main_list_imageView">

            <TextView
                android:id="@+id/main_list_numberLandlord_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/number_of_landlords"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_list_name_textView" />

            <TextView
                android:id="@+id/main_list_name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                app:layout_constraintEnd_toEndOf="@+id/main_list_numberLandlord_textView"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/main_list_pointsGained_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points_gained"
                app:layout_constraintEnd_toEndOf="@+id/main_list_numberLandlord_textView"
                app:layout_constraintTop_toBottomOf="@+id/main_list_numberLandlord_textView" />

            <TextView
                android:id="@+id/name_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/none"
                app:layout_constraintStart_toEndOf="@+id/main_list_name_textView"
                app:layout_constraintTop_toTopOf="@+id/main_list_name_textView" />

            <TextView
                android:id="@+id/numLandlord_textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/none"
                app:layout_constraintBottom_toTopOf="@+id/main_list_pointsGained_textView"
                app:layout_constraintStart_toEndOf="@+id/main_list_numberLandlord_textView"
                app:layout_constraintTop_toTopOf="@+id/main_list_numberLandlord_textView" />

            <TextView
                android:id="@+id/numpoints_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/none"
                app:layout_constraintBottom_toBottomOf="@+id/main_list_pointsGained_textView"
                app:layout_constraintStart_toEndOf="@+id/main_list_pointsGained_textView"
                app:layout_constraintTop_toTopOf="@+id/main_list_pointsGained_textView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>